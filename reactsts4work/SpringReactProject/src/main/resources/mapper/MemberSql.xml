<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boot.data.mapper.MemberMapper">
	<insert id="insertMember" parameterType="member">
		insert into reactmember(myname,myid,mypass,gaipday) values(#{myname},#{myid},#{mypass},now())
	</insert>
	<select id="getAllMembers" resultType="member">
	select * from reactmember order by num
	</select>
	<select id="getSearchId" resultType="int" parameterType="String">
	select count(*) from reactmember where myid=#{myid}
	</select>
	<select id="getLogin" resultType="int" parameterType="Map">
	select count(*) from reactmember where myid=#{myid} and mypass=#{mypass}
	</select>
	<select id="getName" resultType="String" parameterType="String">
	select myname from reactmember where myid=#{myid}
	</select>
	<delete id="deleteMember" parameterType="int">
	delete from reactmember where num=#{num}
	</delete>
</mapper>