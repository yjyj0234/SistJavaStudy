package day0227;

class Jungbo
{
	private String name;
	private int age;
	private String job;
	private String hobby;
	
	public String getName() 
	{
		return name;
	}
	public void setName(String name) 
	{
		this.name = name;
	}
	public int getAge() 
	{
		return age;
	}
	public void setAge(int age) 
	{
		this.age = age;
	}
	public String getJob() 
	{
		return job;
	}
	public void setJob(String job) 
	{
		this.job = job;
	}
	public String getHobby() 
	{
		return hobby;
	}
	public void setHobby(String hobby) 
	{
		this.hobby = hobby;
	}
	
	//출력 메서드 : void로 출력을 완성시킴(리턴형이 없고 완성형으로 출력을 해놓음)
	public void writeJungbo() 
	{
		System.out.println("이름: "+this.name+" 나이: "+this.age+" 직업: "+job+" 취미: "+hobby);  //this 써도 안써도 상관없다
	}
	
}
class Jangbo {
	private String name2;
	private int age2;
	private String job2;
	private String hobby2;
	
	public String getName2() {
		return name2;
	}
	public void setName2(String name2) {
		this.name2 = name2;
	}
	public int getAge2() {
		return age2;
	}
	public void setAge2(int age2) {
		this.age2 = age2;
	}
	public String getJob2() {
		return job2;
	}
	public void setJob2(String job2) {
		this.job2 = job2;
	}
	public String getHobby2() {
		return hobby2;
	}
	public void setHobby2(String hobby2) {
		this.hobby2 = hobby2;
	}
	public void writeJangbo() 
	{
		System.out.println("이름: "+name2+" 나이: "+age2+" 직업: "+job2+" 취미: "+hobby2);  //this 써도 안써도 상관없다
	}
}
///////////////////////////////////

public class Ex10ObjectTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Jungbo jb=new Jungbo();
		jb.writeJungbo();
		
		jb.setName("김연아");
		jb.setAge(33);
		jb.setJob("선수");
		jb.setHobby("피겨");
		jb.writeJungbo();
		//2번째 객체 생성해서 setter 이용수정 getter 이용 출력
		
		Jangbo bo=new Jangbo();
		bo.setName2("손연재");
		bo.setAge2(29);
		bo.setJob2("선수");
		bo.setHobby2("피겨");
		bo.writeJangbo();
		
	}

}
