package day0310;

import java.awt.Color;
import java.awt.Container;

import javax.swing.JFrame;

//JFrame 상속 받기
public class SwingEx1 extends JFrame{

	Container cp;
	//생성자
	public SwingEx1(String title) {
		super(title);  //JFrame 부모생성자를 통해서 창제목을 통해서 제목을 볼수 있게한다
		
		//window 창을 하나 더띄우고 
		
		//위치, 사이즈
		this.setBounds(0, 10, 900, 500);
		
		//색상(백그라운드만 있으면 팬이라는것 때문에 색상 안변함)
		//this.setBackground(Color.BLUE);
		
		//팬 얻어오고 색깔 바꾸기
		//this.getContentPane().setBackground(Color.CYAN);
		
		//rgb 컬러 조합 
		//this.getContentPane().setBackground(new Color(255,192,192));
		
		//cp를 통해 색깔 얻어오기
		cp=this.getContentPane();
		cp.setBackground(new Color(255,0,255));
		
		//메인프레임 종료
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		//창을 보여주게 하겠다
		this.setVisible(true);

		
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		SwingEx1 sw1=new SwingEx1("스윙 기본 #1");
		
	}

}
