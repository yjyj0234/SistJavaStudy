package day0310;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Container;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

//ctrl+shift+o = 자동 import
public class BtnArrayEvent7 extends JFrame{

	Container cp;
	JButton [] btn=new JButton[7];
	String [] btnLabel={"RED","YELLOW","BLUE","GREEN","BLACK","CYAN","PINK"};
	Color [] btnColor= {Color.red,Color.yellow,Color.blue,Color.green,Color.black,Color.cyan,Color.pink};
	
	//생성자
	public BtnArrayEvent7(String title) {
		super(title);  //JFrame 부모생성자를 통해서 창제목을 통해서 제목을 볼수 있게한다
	
		this.setBounds(0, 10, 900, 500);
	
		cp=this.getContentPane();
		cp.setBackground(new Color(0,0,0));
		
		initDesign();
		this.setVisible(true);
	
	}
	//디자인
	public void initDesign() {
		//Panel : 기본이 FlowLayout(수평으로 쫙 있음)
		JPanel panel=new JPanel();
		panel.setBackground(new Color(127,255,212));
		
		//panel을 상단에 배치
		//방법1: this.add(panel, BorderLayout.NORTH);
		this.add("North", panel);
		
		//버튼 생성
		
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		new BtnArrayEvent7("버튼 배열 이벤트 #7");
		
	}
}
