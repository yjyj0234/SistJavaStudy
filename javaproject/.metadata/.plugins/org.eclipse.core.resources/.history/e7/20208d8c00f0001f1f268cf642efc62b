package day0221;

import java.util.Scanner;

public class GuguScan_07 {

	public static void main(String[] args) {
		// 원하는 구구단 입력
		// 5
		// 입력한 5단만 출력되게 하기!!!
		//반복적으로 출력하다가 0을 누르면 종료되게
		
		Scanner sc=new Scanner(System.in);
		
		int n;
		while(true)
		{
		for(n=1;n<=9;n++)
			{	
			System.out.println("원하는 구구단 입력");
			n=sc.nextInt();
			//종료조건
			if(n==0)
			{
				System.out.println("구구단을 종료합니다");
				break;
		    }
			
				for(int j=1;j<=9;j++)
				{
					if(n!=5)
					{
						System.out.println("5단만 출력하시오!!");
						break;
					}
					
					System.out.println(n+"X"+j+"="+(n*j));
				}
				
			}
			
		}		
		
	}

}
