package day0224;

import java.util.Random;

public class RandonTest_02 {

	public static void main(String[] args) {
		// 자바에서 난수를 구하는 방법
		//Math.random()
		//Random 이라는 클래스를 생성해서 구하는 방법
		
		Random r=new Random();
		
		System.out.println("0에서 9사이의 난수 5개 발생");
		for(int i=1;i<=5;i++)
		{
			int n=r.nextInt(10);                  //next
			System.out.print(n+"\t");
			
		}
		
		System.out.println("\n========================================");
		
		System.out.println("0에서 99사이의 난수 5개 발생");
		for(int i=1;i<=5;i++)
		{
			int n=r.nextInt(100);                  
			System.out.print(n+"\t");
			
		}
		
		System.out.println("\n========================================");
		
		System.out.println("1에서 10사이의 난수 5개 발생");
		for(int i=1;i<=5;i++)
		{
			int n=r.nextInt(10);                  
			System.out.print((n+1)+"\t");             //			System.out.print((n+1)+"\t"); 또는 nextInt(10)+1
			
		}
		
		System.out.println("\n========================================");
		
		//Math.random()
		System.out.println("65에서 90사이의 난수 5개 발생");
		for(int i=1;i<=10;i++)
		{
			int n=(int)(Math.random()*26)+65;        //65~90                  
			System.out.print(n+"  ");
		}
		System.out.println();
		System.out.println("\n========================================");
		
		//Random()
		System.out.println("65에서 90사이의 난수 5개 발생");
		for(int i=1;i<=10;i++)
		{
			int n=r.nextInt()
		}
	}
	
}
