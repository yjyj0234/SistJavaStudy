package day0310;

import java.awt.Color;
import java.awt.Container;
import java.awt.FlowLayout;

import javax.swing.JButton;
import javax.swing.JFrame;

public class SwingLayoutButtonEvent03 extends JFrame{

	Container cp;
	JButton btn1,btn2,btn3;
	//생성자
	public SwingLayoutButtonEvent03(String title) {
		super(title);  //JFrame 부모생성자를 통해서 창제목을 통해서 제목을 볼수 있게한다
		
	
		this.setBounds(0, 10, 900, 500);
		
	
		cp=this.getContentPane();
		cp.setBackground(new Color(0,0,0));
		
		
		setDesign();
		
		this.setVisible(true);

		
	}
	
	//디자인
	public void setDesign() {
		
		//레이아웃 변경
		this.setLayout(new FlowLayout());
		//버튼 생성
		btn1=new JButton("버튼#1");
		btn2=new JButton("버튼#2");
		btn3=new JButton("버튼#3");
	}
	
	//이벤트
	public void setEvent() {
		
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		SwingLayoutButtonEvent03 sw1=new SwingLayoutButtonEvent03("스윙 기본 #3");
		
	}
}
