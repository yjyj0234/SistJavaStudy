package day0319;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

public class ConnectTestEx2 {
	static final String URL="jdbc:oracle:thin:@localhost:1521:XE";
	
	public void connectBoardAnswer() {
		
		Connection conn=null;
		Statement stmt=null;
		ResultSet rs=null;
		
		String sql="select b.bno,writer,subject,nickname,content,writerday "
				+"from board b,answer a where b.bno=a.bno";
		
		try {
			conn=DriverManager.getConnection(URL, "yjyj0234", "a1234");
			System.out.println("오라클 연결 성공");
			stmt=conn.createStatement();
			rs=stmt.executeQuery(sql);
			System.out.println("게시판 댓글 리스트");
			System.out.println("-----------------------------------------------------------");
			while(rs.next()) {
				int bno=rs.getInt("bno");
				String writer=rs.getString("writer");
				String subject=rs.getString("subject");
				String nickname=rs.getString("nickname");
				String content=rs.getString("content");
				String writerday=rs.getString("writerday");
				
				System.out.println(bno+"\t"+writer+"\t"+subject+"\t"+nickname+"\t"+content+"\t"+writerday);
			}
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			System.out.println("오라클 연결 실패");
		}
		
	}
	//sawon 부서별 평균급여 최고급여 최저급여
			public void connectSawon() {
				Connection conn=null;
				Statement stmt=null;
				ResultSet rs=null;
				
				String sql="select buseo, to_char(avg(pay),'L999,999,999'), to_char(max(pay),'l999,999,999'),to_char(min(pay),'l999,999,999')"
						+ "from sawon group by buseo";
			}
	
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		ConnectTestEx2 cn2 =new ConnectTestEx2();
		cn2.connectBoardAnswer();
	}

}
