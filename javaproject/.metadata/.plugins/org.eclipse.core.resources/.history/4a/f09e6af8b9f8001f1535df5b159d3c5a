package day0304;

class Work{
	public void process() {
		System.out.println("아무 작업도 하지않는다");	
	}
}

//sub1
class Food extends Work{
	//오버라이딩
	@Override
	public void process() {
		// TODO Auto-generated method stub
		super.process();
		System.out.println("**음식을 만드는 작업을 합니다**");
	}
}
//sub2
class Clean extends Work{
	//오버라이딩
	@Override
	public void process() {
		// TODO Auto-generated method stub
		super.process();
		System.out.println("**청소를 담당합니다**");
	}
}

public class Ex8Inherit {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//다형성으로 생성
		//부모로 선언(인스턴스) = new 자식으로 생성
		Food food=new Food();
		food.process();		//예전에는 이렇게 했었음
		
		Work work;
		work=new Food();
		work.process(); 	//다형성 적용
		work=new Clean();
		
		
	}

}
