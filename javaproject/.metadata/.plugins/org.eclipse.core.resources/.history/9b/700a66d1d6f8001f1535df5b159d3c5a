package day0304;

import java.util.Scanner;

/*
 * 결과 출력
 * 보너스는 개발부만 백만 나머지 부서는 50만원 특별지급
 * 사원명?
 * 홍길동
 * 부서?
 * 개발부
 * 기본급?
 * 2000000
 * ===========================
 * 사원명    부서      기본급     보너스       총급여
 * 홍길동	   개발부    2000000    1000000    3000000
 */
class Sawon{
	private String sawonName,buseo;
	private int gibonPay;
	
	//명시적 생성자(3가지 인자 초기화하는 값 넘기기)
	public Sawon(String sawonName, String buseo, int gibonPay)
	{
		this.sawonName=sawonName;
		this.buseo=buseo;
		this.gibonPay=gibonPay;
	}
	//메서드 _getBonus
	public int getBonus()
	{
		int gB = 0;
		if(buseo=="개발부")
		{
			gB+=1000000;
		}
		else
			gB+=500000;
		return gB;
	}
	public int getTotal()
	{
		int gT=0;
		gT=gibonPay+gB;
		return gT;
	}
	//최종급여출력
	public static void showTitle() {
		System.out.println("=====================================");
		System.out.println("사원명\t부서\t기본급\t보너스\t총급여");
	}
	public void getShowPyo(Sawon s1) {
		System.out.println(sawonName+"\t"+buseo+"\t"+gibonPay+"\t"+s1.getBonus()+"\t"+s1.getTotal());
	}
}
/////////////////////////////
public class QuizSawon {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc=new Scanner(System.in);
		String sn,bs;
		int gb;
		Sawon s1;
		System.out.println("사원명?");
		sn=sc.nextLine();
		System.out.println("부서?");
		bs=sc.nextLine();
		System.out.println("기본급?");
		gb=sc.nextInt();
		
		s1=new Sawon(sn, bs, gb);
		Sawon.showTitle();
		
	}

}
