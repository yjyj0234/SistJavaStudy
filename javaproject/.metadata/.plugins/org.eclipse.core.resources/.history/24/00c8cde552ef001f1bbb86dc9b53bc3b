package day0220;

public class ForSum_12 {

	public static void main(String[] args) {
		// 1~10까지의 반복문으로 합구하기_for
		
		int sum=0;   //빈그릇에 누적이라서 =0 붙여줌
		
		for(int i=1;i<=10;i++)
		{
			sum+=i;  //sum=sum+i
		}
		System.out.println("1~10 까지의 합은 "+sum+"입니다");  //빠져나와서 계산
		
		//1~10까지의 반복문으로 합구하기_while
		int tot=0;
		int i=1;
		while(i<=10)
		{
			//합계변수에 i를 누적
			tot=tot+i;    			
		}
			System.out.println("");
		
		
	}

}
