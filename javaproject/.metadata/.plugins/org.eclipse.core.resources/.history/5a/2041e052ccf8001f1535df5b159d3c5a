package day0304;

interface GameA{
	
	public void play();

}
interface GameB{
	
	public void stop();
}
class MyGame implements GameA,GameB{

	@Override
	public void stop() {
		// TODO Auto-generated method stub
		System.out.println("게임을 중지합니다");
	}

	@Override
	public void play() {
		// TODO Auto-generated method stub
		System.out.println("게임을 시작합니다");
	}
	
}
public class Ex13InterMain {

	public static void main(String[] args) {
		/*
		 * 메인에서 일반객체생성방법
		 * 게임을 시작합니다
		 * 게임을 중지합니다
		 * 다형성 객체생성방법 
		 * 게임을 시작합니다
		 * 게임을 중지합니다
		 */
		//일반
		MyGame mg=new MyGame();
		mg.play();
		mg.stop();
		//다형성
		GameA ga=new MyGame();
				
	}

}
