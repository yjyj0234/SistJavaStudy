package day0221;

import java.util.Scanner;

public class WhileScanSumAvg_10 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/*
		 * 점수(1~100) 입력 받다가 0 입력 시 빠져나온 후 총 갯수와 총점 평균 구하기
		 * ex)
		 * 77
		 * 88
		 * -10
		 * 다시 입력 바람
		 * 99
		 * 110
		 * 다시 입력 바람
		 * 
		 */
		
		Scanner sc=new Scanner(System.in);
		int score,cnt=1,sum=0;
		double avg=0;
		 while(true)
		 {
			 System.out.println(cnt+"번 점수 입력");
			 score=sc.nextInt();
			 

			 {
				 if(score==0)
				 {
					 break;
				 }
				 if(score<1||score>100)
				 {
					 System.out.println("다시 입력 바람");
				      continue;
				 }
				 cnt++;
				 
			 }
			 sum+=score;
			 
		 }
		 avg=(double)sum/cnt;
		 System.out.println("총 갯수: "+cnt);
		 System.out.println("총점 : "+sum);
		 System.out.printf("평균: %.2f",avg);
		
	}

}
