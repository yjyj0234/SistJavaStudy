package day0305;

class OuterObj{
	
	class InnerObj{
		public void write()
		{
			System.out.println("내부 클래스의 메서드");
		}
	}
	public void show() {
		System.out.println("외부 클래스의 메서드");
		System.out.println("외부에서 내부 클래스의 메서드 호출");
		
		//내부클래스 객체 생성_자기멤버처럼 생성이 자유롭다
		InnerObj inObj=new InnerObj();
		inObj.write();
	}
}

public class Ex4InnerClass {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		OuterObj outobj=new OuterObj();
		outobj.show();
		System.out.println("===================================");
		System.out.println("메인에서 직접 내부클래스 생성");
	}

}
