package day0226;

public class ArrayDaCha_03 {

	public static void main(String[] args) {
		// 다차원배열 생성 초기화
		
		int [][] arr;
		arr=new int[2][3];   //2행 3열 메모리에 할당
		
		arr[0][0]=10;
		arr[0][1]=20;
		arr[0][2]=30;
		
		arr[1][0]=40;
		arr[1][1]=50;
		arr[1][2]=60;
		
		System.out.println("행의 갯수: "+arr.length);
		System.out.println("0행의 열 갯수: "+arr[0].length);
		System.out.println("1행의 열 갯수: "+arr[1].length);
		
		System.out.println("**다차원 배열 데이터 출력**");
		for(int i=0;i<arr.length;i++)
		{
			for(int j=0;j<arr[i].length;j++)
			{
				System.out.print(arr[i][j]+"\t");
			}
			System.out.println();
		}
		
	}

}
