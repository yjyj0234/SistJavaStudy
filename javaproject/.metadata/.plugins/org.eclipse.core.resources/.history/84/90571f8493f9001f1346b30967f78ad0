package day0305;

public class Ex16StringBuffer {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		String str="Happy";
		//String ->StringBuffer
		
		StringBuffer sb=new StringBuffer(str);
		
		//인스턴스 변수인 경우 변수명만 출력하면 자동으로 toString()호출
		//toString을 갖고있지 않는 경우 값이 아니라 주소가 출력된다
		System.out.println(sb);
		System.out.println(sb.toString());  //인스턴스 변수라서 자동 호출
		
		//String은 값자체를 변경할 수 없지만 StringBuffer는 문자열 편집이 가능하다
		//맨뒤에 추가
		sb.append('A');
		sb.append('D');
		sb.append(5);
		sb.append("CEO");
		System.out.println(sb);
		
		//삭제
		sb.delete(5, 7);
	}

}
