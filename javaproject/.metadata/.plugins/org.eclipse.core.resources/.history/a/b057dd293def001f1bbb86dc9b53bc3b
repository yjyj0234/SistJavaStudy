package day0220;

public class ForWhileTest_08 {

	public static void main(String[] args) {
		// 10 9 8 7 ....0
		for(int i=10;i>0;i--)
		{
			System.out.print(i+"  ");
		}
		System.out.println();
		//while
		int a=10;
		while(a>=0)
		{
			System.out.print(a--+"  ");   //초기값을 출력 후 하나 감소
		}
		
		//5 4 3 2 1을 for문으로 출력
		for(int n=5;n>=1;n--)
			System.out.println(n+"  ");

	}

}
