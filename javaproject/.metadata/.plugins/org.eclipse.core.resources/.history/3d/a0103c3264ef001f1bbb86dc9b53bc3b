package day0220;

import java.util.Scanner;

public class Quiz0220 {
	public static void quiz1() {
		//1부터 100까지의 숫자중 짝수합과 홀수합을 나누어 출력하시오
		
		//짝수의 합:***
		//홀수의 합:***
		int n,zzac=0,hole=0;
		for(n=2;n<=100;n+=2)
			zzac+=n;
			System.out.println("짝수의 합: "+zzac);
		for(n=1;n<=100;n++)
			{if(n%2==0)
				continue;
			hole+=n;
			}
			System.out.println("홀수의 합: "+hole);
			
		System.out.println();
		
		int x=1;
		int zzacc=0;
		while(x<=100)
		{
			zzacc+=x;
			x+=2;
		}
		System.out.printf("홀수의 합: %d",zzacc);
	}
	
	public static void quiz2() {
		
		//합계를 더할 숫자를 입력하시오
		//숫자를 입력하면 1부터 입력한 숫자까지의 합계를 구해서 출력하시오
		
		//1부터 **까지의 합은 ***입니다
		Scanner sc=new Scanner(System.in);
		
		int n;
		System.out.println("합계를 더할 숫자를 입력하시오");
		n=sc.nextInt();
		
		int sum=0;
		for(int i=1;i<=n;i++)
			{
				sum+=i;
			}
		System.out.println("1부터 "+n+"까지의 합은 "+sum+"입니다");
			
		
		
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		quiz1();
		quiz2();
		
	}

}
