<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boot.data.mapper.BoardMapperInter">
	<select id="getTotalCount" resultType="int" parameterType="Map">
		select count(*) from memboard
		<if test="searchcolumn!=null and searchword!=null">
			where ${searchcolumn} like concat('%',#{searchword},'%')
		</if>
	</select>
	<insert id="insertBoard" parameterType="memboard">
		insert into memboard values(null,#{name},#{myid},#{subject},#{content},#{uploadfile},0,now())	
	</insert>
	<select id="getMaxNum" resultType="int">
		select ifnull(max(num),0) from memboard
	</select>
	<select id="getList" parameterType="Map" resultType="memboard">
		select * from memboard
		<if test="searchcolumn!=null and searchword!=null">
			where ${searchcolumn} like concat('%',#{searchword},'%')
		</if>
		order by num desc limit #{startnum},#{perpage}
	</select>
	<select id="getData" parameterType="int" resultType="memboard">
		select * from memboard where num=#{num}
	</select>
	<update id="updateReadCount" parameterType="int">
		update memboard set readcount=readcount+1 where num=#{num}
	</update>
</mapper>
