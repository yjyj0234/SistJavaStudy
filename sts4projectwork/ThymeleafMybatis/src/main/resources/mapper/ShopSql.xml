<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="thyme.data.mapper.ShopMapperInter">
	<select id="getTotalCount" resultType="int">
		select count(*) from myshop
	</select>
	<insert id="insertMyshop" parameterType="shop">
		insert into myshop values(null,#{sangpum},#{photo},#{price},#{color},#{ipgoday},now())
	</insert>
	<select id="getAllDatas" resultType="shop">
		select * from myshop order by num desc;
	</select>
</mapper>